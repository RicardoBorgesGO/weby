<% content_for :page_header, 'Sites' %>
<% content_for :page_header_description, 'Lista de sites' %>

<div class="box">
  <div class="box-body">
    <div class="row">
      <div class="col-md-5">
        <%= form_tag admin_sites_path, method: 'get', autocapitalize: "off", class: 'search' do %>
          <%= search_input params[:search] %>
        <% end %>
      </div>
      <div class="col-md-7">
        <% if check_permission(Admin::SitesController, ["new"]) %>
          <div class="pull-right">
            <%= link_to t(".new_site"),
              new_admin_site_path,
              class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <%= content_tag :div, render('list'), id: 'list' if @sites %>
  </div>
</div>