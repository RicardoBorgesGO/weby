<%= simple_form_for [:site_admin, @menu] do |f| %>
  <div class="box">
    <div class="box-body">
      <%= f.show_errors %>

      <%= f.input :name,
        placeholder: t(".name"),
        input_html: {class: "name_input"} %>
    </div>
    <div class="box-footer">
      <%= f.button :submit, class: 'btn btn-primary', disable_with: t("please_wait") %>
      <%= link_to t("back"), :back, class: "btn btn-default" %>
    </div>
  </div>
<% end %> 
